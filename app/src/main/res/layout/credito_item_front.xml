<?xml version="1.0" encoding="utf-8"?>
<com.xenione.libs.swipemaker.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/foregroundView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/blanco"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/blanco"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/contItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/contItemHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/contIzquierdoItem"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:id="@+id/imagenCircularItem"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:elevation="12dp"
                        app:cardCornerRadius="50dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">
                        <ImageView
                            android:id="@+id/imgBanco"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/blanco"
                            android:scaleType="centerCrop" />
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/infoBanco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txtNombreBanco"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/azulF"
                            android:textAppearance="?attr/textAppearanceListItem" />
                        <View
                            android:id="@+id/linea"
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="@color/grisD"
                            android:layout_above="@+id/compartir"
                            android:layout_toRightOf="@+id/imagen"/>
                        <LinearLayout
                            android:id="@+id/contCat"
                            android:layout_width="200dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txtLeyendaCat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/leyendaCat"
                                android:textColor="@color/azulF"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/txtCat"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorAccent" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/contDerechoItem"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                    <Button
                        android:id="@+id/meInteresa"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/meInteresa"
                        android:textColor="@color/blanco"
                        android:background="@drawable/estilo_boton"/>
                    <Button
                        android:id="@+id/masInfo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/masInfo"
                        android:textColor="@color/blanco"
                        android:background="@drawable/boton_2"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.xenione.libs.swipemaker.SwipeLayout>