<?xml version="1.0" encoding="utf-8"?>
<com.xenione.libs.swipemaker.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/foregroundView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/blanco"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@color/blanco"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_banco"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@color/blanco"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/nombreBanco"
                            android:layout_width="178dp"
                            android:layout_height="wrap_content"
                            android:text="Banco Palmas"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/azulF"
                            android:textAppearance="?attr/textAppearanceListItem" />
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:background="#ffd5d5d5"
                            android:id="@+id/linea"
                            android:layout_above="@+id/compartir"
                            android:layout_toRightOf="@+id/imagen"/>

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textCat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAT:"
                                android:textColor="@color/azulF"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/cat"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/colorAccent"
                                android:text="63.00%" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="ME INTERESA"
                        android:textColor="@color/blanco"
                        android:background="@drawable/boton_1"/>
                    <Button
                       android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="+ INFORMACION"
                        android:textColor="@color/blanco"
                        android:background="@drawable/boton_2"/>



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.xenione.libs.swipemaker.SwipeLayout>